<div class="heart-container">
    <div class="heart">
        <!-- Heart outline -->
        <div class="heart-shape"></div>
        <!-- Container for the fill with same heart shape clip -->
        <div class="fill-container">
            <div class="fill" id="fill"></div>
        </div>
    </div>
    <div class="name" id="name">Dinara</div>
</div>

<input type="range" min="0" max="100" value="0" id="heat">
<div class="label">Qo'lingning iliqligi bilan uni to'ldir</div>

<script>
    const heat = document.getElementById("heat");
    const fill = document.getElementById("fill");
    const name = document.getElementById("name");

    heat.addEventListener("input", () => {
        // Update fill height
        fill.style.height = heat.value + "%";
        
        // Update name opacity based on fill level
        if (heat.value > 40) {
            name.style.opacity = (heat.value - 40) / 60;
        } else {
            name.style.opacity = 0;
        }
        
        // Optional: Add a pulsing effect when almost full
        if (heat.value > 90) {
            name.style.textShadow = '0 0 15px rgba(255, 77, 109, 0.8)';
        } else {
            name.style.textShadow = '0 0 10px rgba(0, 0, 0, 0.7)';
        }
    });

    // Optional: Add some initial animation
    setTimeout(() => {
        heat.value = 5;
        fill.style.height = '5%';
    }, 500);
</script>

